<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1ede1"
    tools:context=".material">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7bc5ae"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="健康紀錄 - 血壓量測"
                android:textColor="#ffffff"
                android:textSize="30sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名："
                            android:textColor="#444444"
                            android:textSize="25sp"/>

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="讀取中..."
                            android:textSize="25sp"
                            android:textColor="#444444"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="測量次數："
                            android:textColor="#444444"
                            android:textSize="25sp"/>

                        <TextView
                            android:id="@+id/material_measurement_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="0"
                            android:textSize="25sp"
                            android:textColor="#444444"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="次"
                            android:textSize="25sp"
                            android:textColor="#444444"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="異常次數："
                            android:textSize="25sp"
                            android:textColor="#444444"/>
                        <TextView
                            android:id="@+id/material_abnormal_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="0"
                            android:textSize="25sp"
                            android:textColor="#ff0000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="次"
                            android:textSize="25sp"
                            android:textColor="#444444"/>
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_show"
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:visibility="invisible"
                    tools:visibility="visible">
                    <Button
                        android:id="@+id/button_hr_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="40dp"
                        android:backgroundTint="@color/ash"
                        android:text="Show 心律"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/button_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/button_hr_show"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/white"
                        android:text="時"
                        android:textColor="#666666"
                        android:textSize="21sp"
                        android:visibility="invisible"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444444"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="━━ SBP"
                    android:textSize="20sp"
                    android:textColor="@color/yellow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="━━ DBP"
                    android:textSize="20sp"
                    android:textColor="@color/green"/>
                <TextView
                    android:id="@+id/text_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="━━ HR"
                    android:textSize="20sp"
                    android:textColor="@color/orange"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">
                        <Button
                            android:id="@+id/switchBtnHr"
                            android:layout_width="200px"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="時" />
                        <Button
                            android:id="@+id/switchBtnDay"
                            android:layout_width="200px"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="日"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                        <Button
                            android:id="@+id/switchBtnMonth"
                            android:layout_width="200px"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="月"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>


                </LinearLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>